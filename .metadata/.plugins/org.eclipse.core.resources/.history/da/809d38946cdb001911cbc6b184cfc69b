package lift;

public class LiftViewThread extends LiftView implements Runnable {
	private PassengerThread[] passengers;
	private Monitor monitor;
	private int here;
	private int next;
	private int increment;
	
	public LiftViewThread(Monitor monitor) {
		super();
		this.monitor = monitor;
		this.here = 0;
		this.next = 0;
		this.increment = 1;
	}

	@Override
	public void run() {

		//try {
			//wait();
		while(true){
				move();
				stopCheck();
			}
			
		//} catch (InterruptedException e) {
		//	e.printStackTrace();
		//}
		
		
	}
	
	public void move() {
		if(here == 6) {
			increment = -1;
		}
		if(here == 0) {
			increment = 1;
		}
		
		next = here + increment;
		monitor.updateNext(next);
		this.moveLift(here, here + increment);
		here = next;
		
		monitor.updateHere(here);
	}
	
	public void stopCheck(){
		while(monitor.checkFloorEntering()) {
			try {
				wait();
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}
	
	
	

}
